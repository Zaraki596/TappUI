<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_blue_bg"
            tools:context=".MainActivity">
        <com.google.android.material.card.MaterialCardView
                android:id="@+id/mt_no_word_card"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="2dp"
                app:cardCornerRadius="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/corner_color"
                android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="150dp"
                android:layout_marginTop="90dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="Abbreviate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_word_title" android:textStyle="bold"
                        android:textColor="#000" android:textSize="24sp"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/iv_speak"
                        android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                        android:padding="2dp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_speaker"
                        android:id="@+id/iv_speak"
                        app:layout_constraintTop_toTopOf="@+id/tv_word_title"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_word_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"/>
                <View
                        android:id="@+id/divider"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/corner_color"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_word_title"/>
                <androidx.core.widget.NestedScrollView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/nested_sv"
                        app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/divider"
                        app:layout_constraintVertical_bias="0.0" app:layout_constraintBottom_toTopOf="@+id/iv_tapp_share">
                    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                       android:layout_height="wrap_content"

                    >
                        <TextView
                                android:text="More Meanings"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_more_mean_title"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="8dp"
                                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
                        <TextView
                                android:text="More meanings, this should go down fucking down"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_more_meanings" android:textColor="#000"
                                android:textSize="16sp"
                                app:layout_constraintEnd_toEndOf="@+id/tv_more_mean_title"
                                app:layout_constraintStart_toStartOf="@+id/tv_more_mean_title"
                                app:layout_constraintHorizontal_bias="0.0"
                                android:layout_marginBottom="8dp"
                                app:layout_constraintBottom_toTopOf="@+id/divider2"
                                app:layout_constraintTop_toBottomOf="@+id/tv_more_mean_title"
                                app:layout_constraintVertical_bias="0.0"/>
                        <View
                                android:id="@+id/divider2"
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:background="@color/corner_color"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="1.0"
                                app:layout_constraintBottom_toTopOf="@+id/tv_wrd_def_title" android:layout_marginBottom="8dp"/>
                        <TextView
                                android:text="Word definition"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" android:id="@+id/tv_wrd_def_title"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                                app:layout_constraintBottom_toTopOf="@+id/tv_words_define"
                                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
                        <TextView
                                android:text="a very long definitions, lets see how long does it goes it should shift down bit by bit"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" android:id="@+id/tv_words_define"
                                android:textColor="#000"
                                app:layout_constraintStart_toStartOf="@+id/tv_wrd_def_title"
                                app:layout_constraintEnd_toEndOf="@+id/tv_wrd_def_title"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintBottom_toTopOf="@+id/divider4" android:layout_marginBottom="8dp"/>
                        <View
                                android:id="@+id/divider4"
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:background="@color/corner_color"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp" app:layout_constraintBottom_toTopOf="@+id/tv_synonm"
                                android:layout_marginBottom="8dp"/>
                        <TextView
                                android:text="Antonym"
                                style="@style/Custom_text_select"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_antonym"
                                app:layout_constraintTop_toTopOf="@+id/tv_synonm"
                                app:layout_constraintBottom_toBottomOf="@+id/tv_synonm"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                                app:layout_constraintEnd_toStartOf="@+id/tv_synonm" android:layout_marginEnd="8dp"
                                app:layout_constraintHorizontal_chainStyle="packed"
                                app:layout_constraintHorizontal_bias="0.0"/>
                        <TextView
                                android:text="Synonym"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_synonm" android:layout_marginStart="56dp"
                                app:layout_constraintStart_toEndOf="@+id/tv_antonym"
                                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                app:layout_constraintBottom_toTopOf="@+id/rv_antnm_synm"/>
                        <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="0dp"
                                android:layout_height="100dp"
                                tools:listitem="@layout/rv_words_items"
                                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                                android:id="@+id/rv_antnm_synm"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>


                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_red_heart"
                        android:id="@+id/iv_tapp_like"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/iv_tapp_share"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        android:layout_marginStart="24dp"
                        app:layout_constraintTop_toTopOf="@+id/iv_tapp_share"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_tapp_share"
                        app:layout_constraintVertical_bias="1.0"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_share"
                        android:id="@+id/iv_tapp_share" app:layout_constraintStart_toEndOf="@+id/iv_tapp_like"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/iv_tapp_warn"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_warning"
                        android:id="@+id/iv_tapp_warn" app:layout_constraintStart_toEndOf="@+id/iv_tapp_share"
                        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintTop_toTopOf="@+id/iv_tapp_share"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_tapp_share"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>